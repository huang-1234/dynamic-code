{
  "compilerOptions": {
    "lib": ["ES2021", "dom", "DOM.Iterable"],
    "target": "es2015",
    "module": "ESNext",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "dynamic-module-loader/*": ["src/*"]
    }
  },
  "include": ["src"]
}
